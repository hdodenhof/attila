{{!< default}}
<header id="blog-header"{{#if @site.cover_image}} class="has-cover"{{/if}}>
	<div class="inner">
		<nav id="navigation">
			{{#if @site.navigation}}
			<span id="menu-button" class="nav-button">
				<a class="menu-button"><i class="ic ic-menu"></i> {{t "Menu"}}</a>
			</span>
			{{/if}}
		</nav>
		{{#if @site.logo}}
		<img class="blog-logo" src="{{img_url @site.logo size="l"}}" alt="{{@site.title}}" />
		{{else}}
		<h1 class="blog-name">{{@site.title}}</h1>
		{{/if}}
		{{#if @site.cover_image}}
		<div class="blog-cover cover" style="background-image: url('{{img_url @site.cover_image}}');"></div>
		{{/if}}
	</div>
</header>

<div id="index" class="container">

	<main class="content" role="main">

		{{> "loop"}}

	</main>

</div>
